@model Events.IO.Application.ViewModels.EventViewModel

<div class="form-horizontal">

    <input type="hidden" asp-for="Address.EventId" />
    <input type="hidden" asp-for="Address.Id" />

    <div class="form-group">
        <label asp-for="Address.Address1" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Address.Address1" class="form-control" />
            <span asp-validation-for="Address.Address1" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address.Address2" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Address.Address2" class="form-control" />
            <span asp-validation-for="Address.Address2" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address.City" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Address.City" class="form-control" />
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address.Province" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            @Html.Partial("_Provinces")
            <span asp-validation-for="Address.Province" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address.ZipCode" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Address.ZipCode" class="form-control" />
            <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
        </div>
    </div>
</div>
